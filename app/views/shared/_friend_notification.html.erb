<li class="notif-followed border-bottom mb-1 p-2 rounded-4">
    <div class="d-flex align-items-end" style="margin-bottom: 4px">
      <div class="avatar">
        <%= cl_image_tag user.photo.key, class: "avatar"  %>
      </div>
      <div class="d-flex notif text-dark">
        <%= link_to user_path(user, host: (ENV["DOMAIN"] || "localhost:3000")), class: "text-decoration-none text-dark lh-1 d-flex" do %>
          <strong><p class="me-1" ><%= user.username %></p></strong>
          <p class="me-1">t'a suivi.</p>
        <% end %>
      </div>
    </div>
</li>
