<div class="container bookmarks fullheight" data-controller="category-filter">

  <div class="my-5 page-title">
    <h2>Mes favoris<i class="fa-solid fa-eye icon-logo"></i></h2>
  </div>

  <div class="btn-group" role="group" aria-label="Category filters">
    <div class="category-btn btn btn-secondary active" data-action="click->category-filter#filter" data-category-id="">
      All
    </div>
    <% @categories.each do |category| %>
      <div class="category-btn btn btn-secondary" data-action="click->category-filter#filter" data-category-id="<%= category.id %>">
        <%= category.name %>
      </div>
    <% end %>
  </div>

  <div class="bookmarks-container" data-category-filter-target="categoryContainer">
    <% @bookmarks_by_category.each do |category, bookmarks| %>
      <div class="category-section" data-category-id="<%= category.id %>">

        <div class="d-flex justify-content-between align-items-center">
          <h3><%= category.name %></h3>
          <%= link_to "See all", "#", class: "see-all-link", data: { action: 'click->category-filter#seeAll mouseenter->category-filter#hoverSeeAll mouseleave->category-filter#leaveSeeAll', category_id: category.id } %>
        </div>

        <div class="bookmarks-list grid-view" data-category-filter-target="bookmarksList">
          <% if bookmarks.any? %>
            <% bookmarks.each do |bookmark| %>
              <div class="bookmark-item">
                <%= link_to toi_path(bookmark) do %>
                  <div class="bookmark-img-wrapper">
                    <%= cl_image_tag bookmark.photo.key, class: "bookmark-img" %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <p class="white-text">Aucun favori pour cette cat√©gorie.
            <br>Explorez et sauvegardez plus de Tois !</p>
          <% end %>
        </div>

      </div>
    <% end %>
  </div>
</div>
