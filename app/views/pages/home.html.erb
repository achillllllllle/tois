<div class="d-flex flex-column justify-content-center align-middle" style="height: 100vh;">
  <% if current_user&.permitted?  %>
    <div class="p-3 justify-content-center align-items-center bg-primary rounded text-white">
      <i class="fa-solid fa-unlock fa-2xl me-2 animate__animated animate__rubberBand animate__infinite"> </i>
      <h2 class="m-0">Welcome</h3>
      <h3 class="fw-bold"><%= current_user.username %></h2>
      <%= link_to "go",  root_path %>
    </div>
  <% else %>
    <div class="d-flex flex-column justify-content-center align-items-center p-3">
      <div class="d-flex justify-content-center align-items-center mb-4">
        <i class="text-white fa-solid fa-lock fa-2xl me-2 animate__animated animate__headShake animate__infinite"></i>
        <h3 class="m-0 fw-bold">You're locked!</h3>
      </div>
        <%= link_to new_post_path do %>
      <div class="btn btn-primary rounded">Add a new post</div>
      <% end %>
    </div>
  <% end %>
</div>
